{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "CALC++ Linux",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/CALC++",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/bin",
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "CALC++ Windows",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/CALC++.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/bin",
            "environment": [],
            "console": "externalTerminal"
        }
    ]
}